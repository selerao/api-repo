<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="0" author="victor.seleri">
        <createTable tableName="funcionarios">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="nome_completo" type="varchar(256)"/>
            <column name="email_corporativo" type="varchar(256)"/>
            <column name="email_facebook" type="varchar(256)"/>
            <column name="categoria" type="varchar(256)"/>
            <column name="cpf_funcionario" type="varchar(256)"/>
            <column name="cnpj_funcionario" type="varchar(256)"/>
            <column name="pix_funcionario" type="varchar(256)"/>
            <column name="contrato_assinado" type="varchar(256)"/>
            <column name="responsavel_por_clientes_ativos" type="varchar(256)"/>
            <column name="salario" type="varchar(256)"/>

        </createTable>
    </changeSet>
</databaseChangeLog>